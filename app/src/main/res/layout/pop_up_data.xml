<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:id="@+id/linear_pop_up"
    android:layout_height="match_parent"
    android:background="@color/material_blue_A200"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/gambar_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            />
    </RelativeLayout>


    <TextView
        android:text="Isi pesan"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_isiPesan"
        android:text="#1402050009#002#85~134#255#222#219#3"
        android:layout_width="match_parent"
        android:inputType="text|textMultiLine"
        android:layout_height="100dp" />

    <TextView
        android:text="Penjelasan format : #kode_desa#kode_tps#jumlah_suara_paslon_1-jumlah_suara_paslon_2#dpt#pengguna_hak_pilih#suara_sah#suara_tidak_sah#"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Jumlah DPT"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Pengguna Hak Pilih"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:text="255"
            android:hint="Jumlah DPT"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <EditText
            android:text="222"
            android:hint="Pengguna Hak Pilih"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Suara Sah"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Suara tidak sah"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:text="219"
            android:hint="Jumlah DPT"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <EditText
            android:text="3"
            android:hint="Pengguna Hak Pilih"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:text="Kode Validasi"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:text="111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="Keterangan Validasi"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:text="Data benar sesuai perhitungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">



    </LinearLayout>

</LinearLayout>
